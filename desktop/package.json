{
  "name": "mekstation-desktop",
  "version": "1.0.0",
  "description": "MekStation - Desktop Application",
  "main": "dist/electron/main.js",
  "author": {
    "name": "SwerveLabs",
    "email": "swervelabs@proton.me"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/swervelabs/mekstation",
  "repository": {
    "type": "git",
    "url": "https://github.com/swervelabs/mekstation.git"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "electron dist/electron/main.js",
    "dev": "concurrently \"npm run build:watch\" \"wait-on dist/electron/main.js && cross-env NODE_ENV=development electron dist/electron/main.js\"",
    "dev:full": "concurrently \"npm --prefix .. run dev\" \"wait-on http://localhost:3000 && npm run dev\"",
    "rebuild:next-standalone": "node scripts/rebuild-next-standalone.js",
    "release:prepare-update-metadata": "node scripts/release/prepare-update-metadata.js",
    "release:publish-update-metadata": "node scripts/release/publish-update-metadata-gh-pages.js",
    "release:upload-assets": "node scripts/release/upload-release-assets.js",
    "pack": "npm run rebuild:next-standalone && electron-builder --dir",
    "dist": "npm run rebuild:next-standalone && electron-builder",
    "dist:win": "npm run rebuild:next-standalone && electron-builder --win",
    "dist:mac": "npm run rebuild:next-standalone && electron-builder --mac",
    "dist:linux": "npm run rebuild:next-standalone && electron-builder --linux",
    "dist:all": "npm run rebuild:next-standalone && electron-builder --mac --win --linux",
    "clean": "rimraf dist build release",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "prepare": "npm run build",
    "type-check": "tsc --noEmit",
    "icons:generate": "node scripts/generate-icons.js",
    "test:build": "node scripts/test-build.js all",
    "test:build:win": "node scripts/test-build.js win",
    "test:build:mac": "node scripts/test-build.js mac",
    "test:build:linux": "node scripts/test-build.js linux"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "build": {
    "extends": "../electron-builder.yml",
    "afterPack": "scripts/electron-builder/afterPack.js"
  },
  "keywords": [
    "battletech",
    "mech",
    "editor",
    "game",
    "desktop",
    "electron",
    "megamek"
  ]
}
