{
  "name": "mekstation-app",
  "version": "0.1.0",
  "description": "BattleTech unit construction and customization tool",
  "author": {
    "name": "SwerveLabs",
    "email": "swervelabs@proton.me"
  },
  "license": "SEE LICENSE IN LICENSE",
  "private": true,
  "scripts": {
    "dev": "npx kill-port 3000 --silent && next dev",
    "dev:e2e": "npx kill-port 3000 --silent && next dev --webpack",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "eslint . --config eslint.config.mjs",
    "lint:fix": "eslint . --config eslint.config.mjs --fix",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "verify": "npm run typecheck && npm run lint && npm run test -- --watchAll=false",
    "verify:full": "npm run typecheck && npm run lint && npm run test -- --watchAll=false && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build -o storybook-static",
    "coverage:analyze": "npm run test:coverage && node scripts/analysis/coverage-analysis.js",
    "analyze": "npm run build:analyze && npx webpack-bundle-analyzer .next/static/chunks/*.js",
    "build:profile": "next build --profile",
    "build:debug": "next build --debug",
    "perf:test": "node scripts/performance/measure-bundle-size.js",
    "migrate:equipment": "node scripts/data-migration/split-equipment-files.js",
    "extract:equipment": "npx ts-node -P scripts/tsconfig.json -r tsconfig-paths/register scripts/data-migration/extract-equipment-to-json.ts",
    "convert:mtf": "python scripts/megameklab-conversion/mtf_converter.py",
    "convert:mtf:cli": "npx ts-node -P scripts/tsconfig.json scripts/data-migration/convert-mtf-files.ts",
    "sync:mm-data": "bash scripts/sync-mm-data-assets.sh",
    "validate:parity": "npx tsx scripts/validate-parity.ts",
    "validate:refactor": "npm run test && npm run lint && npm run build",
    "analyze:files": "./scripts/monitor-file-sizes.sh",
    "analyze:files:report": "./scripts/monitor-file-sizes.sh > file-analysis-report.txt && cat file-analysis-report.txt",
    "analyze:complexity": "npx complexity-report --format json --output complexity-report.json .",
    "analyze:dependencies": "npx madge --circular --extensions ts,tsx --exclude node_modules --json src/ > dependency-analysis.json",
    "refactor:validate": "npm run analyze:files && npm run test && npm run lint",
    "refactor:pre-commit": "npm run analyze:files && npm run test:coverage && npm run lint && npm run build",
    "refactor:metrics": "node scripts/metrics/validate-refactoring-metrics.js",
    "quality:check": "npm run analyze:files && npm run analyze:complexity && npm run test:coverage",
    "quality:report": "npm run analyze:files:report && npm run analyze:complexity && npm run analyze:dependencies && echo 'Quality analysis complete. Check generated reports.'",
    "terminology:validate": "npx ts-node openspec/scripts/terminology-tool.ts validate",
    "terminology:validate:strict": "npx ts-node openspec/scripts/terminology-tool.ts validate --strict",
    "terminology:fix": "npx ts-node openspec/scripts/terminology-tool.ts fix",
    "terminology:fix:dry-run": "npx ts-node openspec/scripts/terminology-tool.ts fix --dry-run",
    "terminology:check": "node openspec/scripts/validate-terminology.js",
    "docker:build": "docker build -t mekstation .",
    "docker:run": "docker run -p 3000:3000 -v mekstation-data:/app/data mekstation",
    "docker:dev": "docker-compose up dev",
    "docker:prod": "docker-compose up app -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --rmi local",
    "electron:install": "cd desktop && npm install",
    "electron:dev": "cd desktop && npm run dev:full",
    "electron:build": "npm run build && cd desktop && npm run build",
    "electron:pack": "npm run electron:build && cd desktop && npm run pack",
    "electron:dist": "npm run electron:build && cd desktop && npm run dist",
    "electron:dist:win": "npm run electron:build && cd desktop && npm run dist:win",
    "electron:dist:mac": "npm run electron:build && cd desktop && npm run dist:mac",
    "electron:dist:linux": "npm run electron:build && cd desktop && npm run dist:linux",
    "electron:dist:all": "npm run electron:build && cd desktop && npm run dist:all",
    "electron:test:build": "cd desktop && npm run test:build",
    "electron:test:build:win": "cd desktop && npm run test:build:win",
    "electron:icons": "cd desktop && node scripts/generate-icons.js",
    "package:docker": "npm run docker:build",
    "package:desktop": "npm run electron:dist:all",
    "prepare": "husky"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.8",
    "@turf/bbox": "^7.3.2",
    "@turf/boolean-point-in-polygon": "^7.3.2",
    "@turf/centroid": "^7.3.2",
    "@turf/helpers": "^7.3.2",
    "@turf/hex-grid": "^7.3.2",
    "@turf/point-grid": "^7.3.2",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "better-sqlite3": "^12.5.0",
    "electron-updater": "^6.6.2",
    "jspdf": "^3.0.4",
    "minisearch": "^7.2.0",
    "next": "^16.0.3",
    "poisson-disk-sampling": "^2.3.1",
    "react": "^19.1.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.8",
    "uuid": "^11.1.0",
    "y-indexeddb": "^9.0.12",
    "y-protocols": "^1.0.7",
    "y-webrtc": "^10.3.0",
    "yjs": "^13.6.29",
    "zustand": "^5.0.8",
    "zustand-middleware-yjs": "^1.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/config-array": "^0.20.1",
    "@eslint/eslintrc": "^3.0.0",
    "@next/eslint-plugin-next": "^15.3.3",
    "@playwright/test": "^1.57.0",
    "@rushstack/eslint-patch": "^1.11.0",
    "@storybook/addon-a11y": "^8.6.15",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.15",
    "@storybook/react-vite": "^8.6.15",
    "@storybook/test": "^8.6.15",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/electron": "^1.4.38",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.0",
    "@types/poisson-disk-sampling": "^2.2.4",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@types/webpack-bundle-analyzer": "^4.7.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "babel-jest": "^30.0.0",
    "baseline-browser-mapping": "^2.9.17",
    "eslint": "^9.39.1",
    "eslint-config-next": "^15.5.6",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "fake-indexeddb": "^6.2.5",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0",
    "jest-environment-node": "^30.0.0",
    "lint-staged": "^16.2.7",
    "minimatch": "^3.1.2",
    "node-mocks-http": "^1.17.2",
    "playwright": "^1.57.0",
    "sharp": "^0.34.5",
    "storybook": "^8.6.15",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "overrides": {
    "brace-expansion": "^4.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --config eslint.config.mjs --fix",
      "bash -c 'npx tsc --noEmit --skipLibCheck'"
    ],
    "*.{js,jsx}": [
      "eslint --config eslint.config.mjs --fix"
    ]
  }
}
