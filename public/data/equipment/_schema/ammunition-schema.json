{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://megamek-web.app/schemas/ammunition.json",
  "title": "BattleTech Ammunition",
  "description": "Schema for BattleTech ammunition definitions",
  "type": "object",
  "required": [
    "id",
    "name",
    "category",
    "variant",
    "techBase",
    "rulesLevel",
    "compatibleWeaponIds",
    "shotsPerTon",
    "weight",
    "criticalSlots",
    "costPerTon",
    "battleValue",
    "isExplosive",
    "introductionYear"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for the ammunition (kebab-case)"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Display name of the ammunition"
    },
    "category": {
      "type": "string",
      "enum": [
        "Autocannon",
        "Gauss",
        "Machine Gun",
        "LRM",
        "SRM",
        "MRM",
        "ATM",
        "NARC",
        "Artillery",
        "AMS"
      ],
      "description": "Ammunition category"
    },
    "variant": {
      "type": "string",
      "enum": [
        "Standard",
        "Armor-Piercing",
        "Cluster",
        "Precision",
        "Flechette",
        "Inferno",
        "Fragmentation",
        "Incendiary",
        "Smoke",
        "Thunder",
        "Swarm",
        "Tandem-Charge",
        "Extended Range",
        "High Explosive"
      ],
      "description": "Ammunition variant type"
    },
    "techBase": {
      "type": "string",
      "enum": ["INNER_SPHERE", "CLAN", "BOTH"],
      "description": "Technology base for the ammunition"
    },
    "rulesLevel": {
      "type": "string",
      "enum": ["INTRODUCTORY", "STANDARD", "ADVANCED", "EXPERIMENTAL", "UNOFFICIAL"],
      "description": "Rules level/complexity"
    },
    "compatibleWeaponIds": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "description": "List of weapon IDs this ammo is compatible with"
    },
    "shotsPerTon": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of shots per ton of ammunition"
    },
    "weight": {
      "type": "number",
      "minimum": 0,
      "description": "Weight per unit in tons (usually 1)"
    },
    "criticalSlots": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of critical slots required"
    },
    "costPerTon": {
      "type": "number",
      "minimum": 0,
      "description": "Cost in C-Bills per ton"
    },
    "battleValue": {
      "type": "number",
      "minimum": 0,
      "description": "Battle Value per ton"
    },
    "isExplosive": {
      "type": "boolean",
      "description": "Whether the ammo causes explosions when hit"
    },
    "damageModifier": {
      "type": "number",
      "description": "Damage modifier applied by this ammo type"
    },
    "rangeModifier": {
      "type": "number",
      "description": "Range modifier applied by this ammo type"
    },
    "introductionYear": {
      "type": "integer",
      "minimum": 1950,
      "maximum": 3200,
      "description": "Year the ammunition was introduced"
    },
    "extinctionYear": {
      "type": "integer",
      "minimum": 1950,
      "maximum": 3200,
      "description": "Year the ammunition became extinct (if applicable)"
    },
    "reintroductionYear": {
      "type": "integer",
      "minimum": 1950,
      "maximum": 3200,
      "description": "Year the ammunition was reintroduced (if applicable)"
    },
    "special": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Special rules for this ammunition type"
    },
    "flags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Equipment behavior flags (e.g., EXPLOSIVE, INCENDIARY)"
    },
    "allowedUnitTypes": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "BattleMech", "OmniMech", "IndustrialMech", "ProtoMech",
          "Vehicle", "VTOL", "Support Vehicle",
          "Aerospace", "Conventional Fighter", "Small Craft",
          "DropShip", "JumpShip", "WarShip", "Space Station",
          "Infantry", "Battle Armor"
        ]
      },
      "description": "Unit types that can use this ammunition. If omitted, defaults to BattleMech, Vehicle, Aerospace."
    }
  },
  "additionalProperties": false
}

